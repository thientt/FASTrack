@model FASTrack.Model.DTO.SYSUsersDto

@{
    ViewBag.Title = "AllowUser";
}
<h2>Allow User</h2>
<h5>Are you sure you want to give access this User?</h5>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Salt)
            <div class="form-group">
                <label class="control-label col-lg-2">Email</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Full Name</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.FullName, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Phone</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.Phone, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Register Date</label>
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.RegistedDate)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <input type="submit" value="Allow" class="btn btn-danger" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    @Html.ActionLink("Back to List", "List")
                </div>
            </div>
        </div>
    </div>
}
@Html.Partial("_PartialPageLoading")