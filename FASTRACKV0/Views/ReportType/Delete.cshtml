@model FASTrack.Model.DTO.ReportTypesDto

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Report Type</h2>
<h5>Are you sure you want to DELETE this report?</h5>
<hr />

@using (Html.BeginForm())
{
    <div class="row">
        <div class="form-horizontal">
            @Html.HiddenFor(x => x.Id)
            <div class="form-group">
                <label class="control-label col-lg-2">Name </label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Description</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">DaysAfter</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.DaysAfter, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Inserted by</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.LastUpdatedBy, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Inserted date</label>
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.LastUpdate)
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <input type="submit" value="Delete" class="btn btn-danger" id="btnSubmit" name="btnSubmit" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
}
@Html.Partial("_PartialPageLoading")
@section Scripts {
}