@using PagedList.Mvc;
@model PagedList.IPagedList<FASTrack.Model.DTO.MSTProcessTypesDto>
@{
    AjaxOptions ajaxPaging = new AjaxOptions
    {
        UpdateTargetId = "tblProcessTypes",
        HttpMethod = "GET",
    };
}
<link href="~/Content/main.css" rel="stylesheet" />
<div id="tblProcessTypes">
    <table class="table table-bordered">
        <thead class="header">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Name</th>
                <th class="text-center">Description</th>
                <th class="text-center">Duration</th>
                <th class="text-center">Sequence</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Duration</td>
                <td>@item.SeqNumber</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6">
                    <div id="contentPager" class="pull-right">
                        @Html.PagedListPager(Model, page => Url.Action("List", new { page }),
                        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(ajaxPaging))
                    </div>
                </td>
            </tr>
        </tfoot>
    </table>

</div>