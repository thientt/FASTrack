@model FASTrack.ViewModel.ProcessTypeViewModel

@{
    ViewBag.Title = "Create";
}
<h2>Create New Process Type</h2>
<hr />

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-lg-2">Name</label>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-lg-2">Description</label>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-lg-2">Duration</label>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Duration, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Duration)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-lg-2">SeqNumber</label>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.SeqNumber, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SeqNumber)
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
