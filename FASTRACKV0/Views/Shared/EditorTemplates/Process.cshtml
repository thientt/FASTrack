@model  FASTrack.Model.DTO.FARProcessHistoryDto

<tr style="height:46px;">
    <td style="width:30px;">
        @Html.CheckBoxFor(x => x.IsSelected, htmlAttributes: new { @data_name = "process" })
        @Html.HiddenFor(x => x.Id)
    </td>
    <td style="min-width:100px;">
        @Html.LabelFor(x => Model.ProcessType.Name,String.Format("{0} - {1}", Model.ProcessType.Name, Model.ProcessType.Description), htmlAttributes: new { @style = "margin-bottom:1px !important;" })
    </td>
    <td style="width:70px; padding:5px 10px; text-align:center">
        <label style="white-space:nowrap;background-color:#5B9BD5;font-weight:normal;color:white;padding:3px 25px;margin-top:5px;width:140px;" class="status" id="Status_@Model.Id">No Photo</label>
    </td>
    <td style="width:70px; padding:5px 10px;">
        <input type="button" value="Select Photos" id="btnSelect_@Model.Id" name="@Model.SelectPhoto" class="btn btn-sm btn-default btn-selectphoto status"
               data-process="@Model.Id" data-device="@Model.DeviceId" data-master="@Model.Device.MasterId" />
        @Html.HiddenFor(x => Model.SelectPhoto)
    </td>
</tr>

<div class="modal fade" id="photo_@Model.Id">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                @if (Model != null && Model.ViewPhotos.Count > 0)
                {
                    for (int i = 0; i < Model.ViewPhotos.Count; i++)
                    {
                        @Html.EditorFor(x => @Model.ViewPhotos[i], "SelectPhotos")
                    }
                }
            </div>

            <div class="modal-footer">
                <input type="button" data-dismiss="modal" class="btn btn-default" value="Close" />
            </div>
        </div>
    </div>
</div>