@model FASTrack.ViewModel.MSTViewModel

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label class="control-label col-md-2 col-lg-2">Name<span class="required">*</span> </label>
            <div class="col-md-10 col-lg-10">
                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-lg-2 col-md-2">  Description </label>
            <div class="col-lg-10 col-md-10">
                @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-md-offset-2 cl-lg-10 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary btn-width-md" name="btnSubmit" id="btnSubmit" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-lg-offset-2 col-md-offset-2 col-lg-10 col-md-10">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}
@Html.Partial("_PartialPageLoading")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}