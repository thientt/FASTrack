@model FASTrack.Model.DTO.MSTDto

<div class="row">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-2">Name</label>
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-10">
                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @readonly = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-2 control-label">Description</label>
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-10">
                @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control", @readonly = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-2"><span class="hidden-sm">Last</span> Update By</label>
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-10">
                @Html.TextBoxFor(model => model.LastUpdatedBy, htmlAttributes: new { @class = "form-control", @readonly = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-2 control-label"><span class="hidden-sm">Last</span> Updated</label>
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-10">
                @Html.DisplayFor(model => model.LastUpdate)
            </div>
        </div>
        <br />
        <div class="form-group">
            <p class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-10">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
    </div>
</div>
