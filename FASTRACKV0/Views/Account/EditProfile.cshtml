@model FASTrack.ViewModel.AccountViewModel
@{
    ViewBag.Title = "Edit Profile";
}

<h2>Edit Profile</h2>
<hr />
<link rel="stylesheet" href="@Url.Content("~/Content/bootstrap-theme.min.css")" />
<link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")" />

<div class="row">
    <div class="col-xs-offset-1 col-xs-10">
        @Html.ActionLink("My Account", "Index") |
        @Html.ActionLink("Change Password", "ChangePassword", new { @id = Model.Id })
    </div>
</div>
<br />

@if (ViewData["Result"] == "SUCESS")
{
    <div class="alert alert-success fade in">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Success!</strong>Edit Profile successfully
    </div>
}
@if (ViewData["Result"] == "FAILURE")
{
    <div class="alert alert-danger fade in">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Error!</strong>Edit Profile failure
    </div>
}

@using (@Html.BeginForm())
{
    <div class="row">
        <div class="form-horizontal  col-xs-offset-1 col-xs-10">
            <div class="form-group">
                @Html.HiddenFor(x => x.Id)
                <label class="control-label col-lg-2">First Name</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.FirstName)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2"> Last Name </label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.LastName)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Register Date </label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.RegisterDate, htmlAttributes: new { @Value = @Model.RegisterDate.ToString("d"), @class = "form-control", @Readonly = "readonly", disabled = "disabled" })
                    @Html.HiddenFor(x => x.RegisterDate)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Email</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @Readonly = "readonly", disabled = "disabled" })
                    @Html.HiddenFor(x => x.Email)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Role </label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control", @Readonly = "readonly", disabled = "disabled" })
                    @Html.HiddenFor(x => x.RoleId)
                    @Html.HiddenFor(x => x.RoleName)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Site</label>
                <div class="col-lg-10">
                    @Html.DropDownListFor(x => x.SiteId, new SelectList(Model.Site, "Id", "Name"), new { @class = "form-control" })
                    @Html.HiddenFor(x => x.SiteId)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Phone</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.Phone, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button class="btn btn-primary" type="submit" value="Save" name="btnSubmit" id="btnSubmit">Save</button>
                </div>
            </div>
        </div>
    </div>
}
@Html.Partial("_PartialPageLoading")
@section Scripts{
}
