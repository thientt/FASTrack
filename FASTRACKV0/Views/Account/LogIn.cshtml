@model FASTrack.ViewModel.UserLoginViewModel
@{
    ViewBag.Title = "Login";
}
<h2>Please enter your login credentials</h2>
<hr />
<br />

<div class="row">
    @using (Html.BeginForm())
    {
        <div class="form-horizontal col-xs-offset-1 col-xs-10">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @Html.ValidationSummary("")
                </div>
            </div>
            <div class="form-group">
                <label for="txtEmail" class="control-label col-sm-2">Email<span class="required">*</span></label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Email, htmlAttributes: new { @class = "form-control", @id = "txtEmail" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
            </div>
            <div class="form-group">
                <label for="txtPassword" class="col-sm-2 control-label">Password<span class="required">*</span></label>
                <div class="col-sm-10">
                    @Html.PasswordFor(u => u.Password, htmlAttributes: new { @class = "form-control", @id = "txtPassword" })
                    @Html.ValidationMessageFor(u => u.Password)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input class="btn btn-primary" type="submit" name="btnSubmit" id="btnSubmit" value="Login" />
                </div>
            </div>
        </div>
    }
</div>
@*@Html.Partial("_PartialPageLoading")*@
@section Scripts{
    <script src="~/Scripts/app/loading.js"></script>
    <script>
        $(document).ready(function () {
            $('#txtEmail').focus();
        });
    </script>
}
