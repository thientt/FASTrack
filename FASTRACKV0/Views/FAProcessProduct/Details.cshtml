@model FASTrack.Model.DTO.MSTProcessProductDto

@{
    ViewBag.Title = "Details";
}
<h2>Product Details</h2>
<hr />

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-3 col-md-2">FA Process</label>
        <div class="col-sm-9 col-md-10">
            @Html.TextBoxFor(model => model.ProcessType.Name, htmlAttributes: new { @class = "form-control", @readonly = "true" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3 col-md-2">Product</label>
        <div class="col-sm-9 col-md-10">
            @Html.TextBoxFor(model => model.Product.Name, htmlAttributes: new { @class = "form-control", @readonly = "true" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3 col-md-2">In-Charge Person</label>
        <div class="col-sm-9 col-md-10">
            @Html.TextBoxFor(model => model.InChargePerson, htmlAttributes: new { @class = "form-control", @readonly = "true" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3 col-md-2">Description</label>
        <div class="col-sm-9 col-md-10">
            @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control", @readonly = "true" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3 col-md-2">Last Updated By</label>
        <div class="col-sm-9 col-md-10">
            @Html.TextBoxFor(model => model.LastUpdatedBy, htmlAttributes: new { @class = "form-control", @readonly = "true" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3 col-md-2">Last Update</label>
        <div class="col-sm-9 col-md-10">
            @Html.DisplayFor(model => model.LastUpdate)
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-sm-offset-3 col-md-offset-2 col-sm-9 col-md-10">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-link" }) |
            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-link" })
        </div>
    </div>
</div>
