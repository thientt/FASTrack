@model FASTrack.Model.DTO.DelayReasonDto

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Reason for Delay</h2>
<h5>Are you sure you want to DELETE this?</h5>
<hr />

<div class="row">
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="form-group">
                @Html.HiddenFor(x => x.Id)
                <label class="col-lg-2 control-label">Description</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Last Update By</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.LastUpdatedBy, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Last Update</label>
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.LastUpdate)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <input type="submit" value="Delete" class="btn btn-danger" id="btnSubmit" name="btnSubmit" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    }
</div>
@Html.Partial("_PartialPageLoading")
@section Scripts {
}