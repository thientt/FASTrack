@model FASTrack.ViewModel.ProcessViewModel
@{
    AjaxOptions ajaxOption = new AjaxOptions
    {
        HttpMethod = "POST",
        OnBegin = "onEditProcessBegin",
        OnComplete = "onEditProcessComplete",
        OnSuccess = "onEditProcessSuccess",
        OnFailure = "onEditProcessFailure",
    };
}
<div class="modal fade in" id="modalEditProcess">
    <div class="modal-dialog" style="width:500px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Add Process</h3>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm(ajaxOption))
                {
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.DeviceId)
                            @Html.HiddenFor(x => x.Id)
                            <label class="control-label col-md-3">FA Code</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.ProcessTypeId, new SelectList(Model.ProcessTypes, "Id", "Name"), "---Select---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ProcessTypeId)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Analyst</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.Email, new SelectList(Model.Analysts, "Email", "Email"), "---Select---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Comment</label>
                            <div class="col-md-9">
                                @Html.TextAreaFor(x => x.Comment, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="Submit" class="btn btn-primary btn-width-md" name="btnSubmit" id="btnSubmit" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
