@model int
@{
    ViewBag.Title = "AddProcess";
    AjaxOptions ajaxOption = new AjaxOptions
    {
        HttpMethod = "POST",
        OnBegin = "onDelProcessBegin",
        OnComplete = "onDelProcessComplete",
        OnSuccess = "onDelProcessSuccess",
        OnFailure = "onDelProcessFailure",
    };
}
<div class="modal fade in" id="modalDelProcess">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title text-danger">Delete Process</h3>
            </div>
            @using (Ajax.BeginForm(ajaxOption))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.Hidden("id", Model)
                                <h4 class="text-danger">Are you sure delete FA Process Flow?</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-sm-12">
                        <button class="btn btn-default btn-width-md" data-dismiss="modal" aria-hidden="true">No</button>
                        <input type="submit" value="Yes" class="btn btn-danger btn-width-md" name="btnSubmit" id="btnSubmit" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>