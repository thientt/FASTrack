@model FASTrack.Model.DTO.SitesDto

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Site</h2>
<h5>Are you sure you want to delete this?</h5>
<hr />

@using (Html.BeginForm())
{
    <div class="row">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-lg-2"> Name</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            @Html.HiddenFor(x => x.Id)
            <div class="form-group">
                <label class="control-label col-lg-2">Description</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Address1</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Address1, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Address2</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Address2, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Phone</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Phone, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Created by</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.InsertedBy, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Inserted Date</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.InsertedOn, htmlAttributes: new { @class = "form-control", @Value = Model.InsertedOn.ToString("d"), @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <input type="submit" value="Delete" class="btn btn-danger" name="btnSubmit" id="btnSubmit" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
}
@Html.Partial("_PartialPageLoading")
@section Scripts {
}
