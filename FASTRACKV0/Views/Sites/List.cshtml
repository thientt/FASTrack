@using PagedList.Mvc;
@model PagedList.IPagedList<FASTrack.Model.DTO.SitesDto>
@{
    AjaxOptions ajaxPaging = new AjaxOptions()
    {
        UpdateTargetId = "tblSites",
        HttpMethod = "GET",
    };
}

<link href="~/Content/main.css" rel="stylesheet" />
<div id="tblSites">
    <table class="table table-bordered">
        <thead class="header">
            <tr>
                <th class="text-center"> ID</th>
                <th class="text-center">Name</th>
                <th class="text-center">Description</th>
                <th class="text-center"> Address1</th>
                <th class="text-center">Address2 </th>
                <th class="text-center"> Phone </th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td class="text-center">@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Address1</td>
                <td>@item.Address2</td>
                <td>@item.Phone</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) @*|
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="7">
                    <div id="contentPager" class="pull-right">
                        @Html.PagedListPager(Model, page => Url.Action("List", new { page }),
                        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(ajaxPaging))
                    </div>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
