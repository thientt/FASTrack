                        <tr>
                            <td>
                                <input id="fileUpload2" type="file" class="form-control btn btn-info pull-left" />
                                <button class="btn btn-primary pull-right" id="btnUpload2" value="Upload" style="margin-left:2px;">Upload</button>
                            </td>
                        </tr>
