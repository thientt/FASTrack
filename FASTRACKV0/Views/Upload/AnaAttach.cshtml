@Html.ActionLink("FA Details", "AnaReportUpload", "Dashboard", routeValues: new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-primary" })

@*Popup Initial Reason*@
<div class="modal fade in" id="popupInitalReason">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Reason Delayed</h3>
            </div>
            <div class="modal-body">
                <label class="control-label">Report is already delayed</label>
                @Html.DropDownListFor(x => x.InitalReasonId, new SelectList(Model.InitalReasons, "Id", "Description"), htmlAttributes: new { @class = "form-control", @style = "max-width:320px" })
                @Html.HiddenFor(x => x.InitalReasonId)
            </div>
            <div class="modal-footer">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-offset-3 col-lg-offset-3 col-lg-9 col-md-9">
                            <input type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true" value="Cancel" />
                            <input type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true" value="Save" id="btnSaveInital" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*Popup Final Reason*@
<div class="modal fade in" id="popupFinalReason">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Reason Delayed</h3>
            </div>
            <div class="modal-body">
                <label class="control-label">Report is already delayed</label>
                @Html.DropDownListFor(x => x.FinalReasonId, new SelectList(Model.FinalReasons, "Id", "Description"), htmlAttributes: new { @class = "form-control", @style = "max-width:320px" })
            </div>
            <div class="modal-footer">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-offset-3 col-lg-offset-3 col-lg-9 col-md-9">
                            <input type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true" value="Cancel" />
                            <input type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true" value="Save" id="btnSaveFinal" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_PartialPageLoading")

@section Scripts{
    <script>
        $(document).ready(function () {
            $('input[type="file"]').change(function () {
                $(this).next().removeAttr('disabled');
            }).next().attr('disabled', 'disabled');

            //param popup
            var options = {
                show: true,
                backdrop: false
            };

            uploadFile1 = function (reasonId) {
                var ajaxRequest = $.ajax({
                    type: "POST",
                    processData: false,
                    contentType: false,
                    url: '@Url.Action("AnaAttach", new { id= Model.Id })' + "?type=INT" + "&ReasonId=" + reasonId,
                    data: function () {
                        var formData = new FormData();
                        var files = $('#fileUpload1').get(0).files;
                        if (files.length > 0) {
                            formData.append("File", files[0]);
                        }
                        return formData;
                    }()
                });
                ajaxRequest.success(function (e) {
                    $('#filesName1').html(e);
                    $('#fileUpload1').val('');
                    $('#btnUpload1').attr('disabled', 'disabled');
                });
                ajaxRequest.error(function (e) {
                    $('#filesName1').html('Has Error in while upload file').css('color', 'red');
                });
                ajaxRequest.always(function () {
                    $('html').css('overflow', '-moz-scrollbars-vertical');
                    $('html').css('overflow-y', 'scroll');
                });
            }

            uploadFile2 = function (reasonId) {
                var ajaxRequest = $.ajax({
                    type: "POST",
                    processData: false,
                    contentType: false,
                    url: '@Url.Action("AnaAttach", new { id = Model.Id })' + "?type=FIN" + "&ReasonId=" + reasonId,
                    data: function () {
                        var formData = new FormData();
                        var files = $('#fileUpload2').get(0).files;
                        if (files.length > 0) {
                            formData.append("File", files[0]);
                        }
                        return formData;
                    }()
                });
                ajaxRequest.success(function (e) {
                    $('#filesName2').html(e);
                    $('#fileUpload2').val('');
                    $('#btnUpload2').attr('disabled', 'disabled');
                });

                ajaxRequest.error(function () {
                    $('#filesName2').html('Has Error in while upload file').css('color', 'red');
                });

                ajaxRequest.always(function () {
                    $('html').css('overflow', '-moz-scrollbars-vertical');
                    $('html').css('overflow-y', 'scroll');
                });
            };

            $('#btnSaveInital').on('click', function () {
                var valInitial = $('#InitalReasonId').val();
                uploadFile1(valInitial);
            });
            $('#btnSaveFinal').on('click', function () {
                var valInitial = $('#FinalReasonId').val();
                uploadFile2(valInitial);
            });

            $('#btnUpload1').on('click', function () {
                var isOverInitial = '@isOverInital';
                if (window.FormData !== undefined) {
                    if (isOverInitial == 'True') {
                        $('#popupInitalReason').modal(options);
                    }
                    else {
                        uploadFile1(0);
                    }
                }
                else {
                    alert("This browser doesn't support HTML5 file uploads!");
                }
            });

            $('#btnUpload2').on('click', function () {
                var isOverFinal = '@isOverFinal';
                if (window.FormData !== undefined) {
                    if (isOverFinal == 'True') {
                        $('#popupFinalReason').modal(options);
                    }
                    else {
                        uploadFile2(0);
                    }
                }
                else {
                    alert("This browser doesn't support HTML5 file uploads!");
                }
            });

            $('#btnSubmit').on('click', function () {
                var ajaxRequest = $.ajax({
                    type: 'POST',
                    cache: false,
                    url: '@Url.Action("ReportUploaded", new { id= Model.Id})',
                });
                ajaxRequest.success(function (e) {
                    //remove button submit
                    $('#btnSubmit').remove();
                });

                ajaxRequest.error(function (e) {
                    alert('Has error in while execute report upload');
                });

                ajaxRequest.always(function () {
                    $('#screen').css({ opacity: 0.2, 'width': 0, 'height': 0 });
                    $('body').css({ 'overflow': 'show' });
                    $('#box').css({ 'display': 'none' });
                });
            });
        });
    </script>
}
