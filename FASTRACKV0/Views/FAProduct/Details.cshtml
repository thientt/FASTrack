@model FASTrack.Model.DTO.MSTProductDto

    @{
        ViewBag.Title = "Details";
    }
    <h2>Product Details</h2>
    <hr />

    <div class="row">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-lg-2">Name </label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Lab Site</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.LabSite.Name, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">MainPerson</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.MainPerson, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">SecondaryPerson</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.SecondaryPerson, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">TertiaryPerson</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.TertiaryPerson, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Description</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Last Updated By</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.LastUpdatedBy, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2">Last Update</label>
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.LastUpdate)
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |  @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
