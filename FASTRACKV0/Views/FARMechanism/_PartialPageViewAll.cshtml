@model FASTrack.ViewModel.FindingViewModel

<div class="modal fade in" id="popupFinding">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="modal-title">
                    <h3 class="text-info">FAILURE MECHANISM</h3>
                </div>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-4 text-uppercase">Failure Mechanism</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(x => x.MechanismId, new SelectList(Model.Mechanism, "Id", "Name"), "---Select---", htmlAttributes: new { @class = "form-control", @disabled="disabled" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4">Failure Details</label>
                        <div class="col-sm-8">
                            @Html.TextAreaFor(x => x.FailureDetail, htmlAttributes: new { @class = "form-control", rows = 10, @disabled = "disabled" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
