@model FASTrack.Model.DTO.MSTCustomerDto

@{
    ViewBag.Title = "Details";
}
<h2>Customer Details</h2>
<hr />
<style>
    .padding-check {
        padding-top: 5px;
    }
</style>
<div class="row">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-2">Name </label>
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-10">
                @Html.TextBoxFor(model => model.CustomerName, htmlAttributes: new { @class = "form-control", @readonly = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-2">End Customer</label>
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-10 padding-check">
                @Html.CheckBoxFor(model => model.EndCustomer, htmlAttributes: new { @class = "checkbox checkbox-inline", @disabled = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-2">Location</label>
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-10">
                @Html.TextBoxFor(model => model.Location, htmlAttributes: new { @class = "form-control", @readonly = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-2">TertiaryPerson</label>
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-10 padding-check">
                @Html.CheckBoxFor(model => model.Strategic, htmlAttributes: new { @class = "checkbox checkbox-inline", @disabled = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-2">Last Updated By</label>
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-10">
                @Html.TextBoxFor(model => model.LastUpdatedBy, htmlAttributes: new { @class = "form-control", @readonly = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-2">Last Update</label>
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-10">
                @Html.DisplayFor(model => model.LastUpdate)
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-xs-offset-1 col-sm-offset-2 col-sm-10">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |  @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>
